technique DrawFalseColor601
{
	pass
	{
		vertex_shader = VSDefault(vert_in);
		pixel_shader  = PSDrawFalseColor601(vert_in);
	}
}
technique DrawFalseColor709
{
	pass
	{
		vertex_shader = VSDefault(vert_in);
		pixel_shader  = PSDrawFalseColor709(vert_in);
	}
}
